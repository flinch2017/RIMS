        body {
    position: relative;
    background-color: #e8f5e9; /* No background on the main body */
    display: flex;
    flex-direction: column;
    font-family: 'Arial', sans-serif;
}

body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        
        url('data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2220%22 height=%2220%22 viewBox=%220 0 20 20%22%3E%3Cpath fill=%22%23e0e0e0%22 d=%22M0 0h2v2H0zm2 2h2v2H2zm2 2h2v2H4zm2 2h2v2H6zm2 2h2v2H8zm2 2h2v2H10zm2 2h2v2H12zm2 2h2v2H14z%22/%3E%3C/svg%3E') repeat;
    background-size: 450px, 30px 30px; /* Larger checkered pattern for a more refined look */
    background-position: center, 0 0; /* Logo stays centered, checkered pattern starts at the top */
    opacity: 0.9; /* Slightly faded to make it softer */
    z-index: -1; /* Place it behind other content */
    animation: fadeAnimation 15s ease-in-out infinite, moveCheckered 10s linear infinite; /* Fading + vertical move */
}

/* Keyframes for fading effect */
@keyframes fadeAnimation {
    0%, 100% { opacity: 0.9; } /* Keep the opacity at a subtle level */
    50% { opacity: 0.4; }   /* Faded in the middle for a smooth transition */
}

/* Keyframes for moving only the checkered pattern vertically */
@keyframes moveCheckered {
    0% { background-position: center, 0 0; }  /* Start at the top */
    100% { background-position: center, 0 100%; }  /* Move to the bottom */
}

        .header {
            background: linear-gradient(90deg, #008000, #66bb6a);
            color: white;
            padding: 0.75rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            font-size: 1rem;
        }

        .header .brand {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .header .btn-profile,
        .header .btn-logout {
            background-color: #ffffff;
            color: #2e7d32;
            border: none;
            padding: 0.4rem 0.8rem;
            border-radius: 4px;
            font-size: 0.9rem;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
            margin-right: 10px;
        }

        .header .btn-profile:hover,
        .header .btn-logout:hover {
            background-color: #f1f1f1;
            color: #2e7d32;
        }

        .dashboard-container {
            margin-top: 60px;
            display: flex;
            flex-wrap: wrap;
        }
        .sidebar {
            width: 220px;
            background-color: #66bb6a;
            padding-top: 15px;
            position: fixed;
            top: 60px;
            left: 0;
            height: calc(100% - 60px);
            overflow-y: auto;
            z-index: 900;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 0.8rem;
            text-decoration: none;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #388e3c;
        }

        .sidebar i {
            margin-right: 8px;
            font-size: 1rem;
        }

        .main-content {
            margin-left: 220px; /* Increased to account for the sidebar */
            padding: 1.5rem;
            flex-grow: 1;
            width: 100%;
        }

        .welcome {
            font-size: 1.5rem;
            color: #2e7d32;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 1rem;
        }

        canvas {
            width: 100% !important;
            height: 300px !important;
        }

        .card-title {
            margin-bottom: 1rem;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .my-4 {
            font-size: large;
        }

        /* Scrolling Sections */
        .chart-section {
            margin-bottom: 2rem;
            padding: 1rem;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: auto; /* Allow both horizontal and vertical scrolling */
            max-height: 400px; /* Limit the height of the chart section */
        }

        /* Ensure responsiveness */
        @media (max-width: 768px) {
            .dashboard-container {
                flex-direction: column;
                gap: 1rem;
            }

            .sidebar {
                position: static;
                height: auto;
                width: 100%;
                padding: 0;
                display: flex;
                justify-content: space-around;
            }

            .sidebar a {
                padding: 1rem;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
    <style>
       /* General Card Styles */
.card {
    padding: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
    display: flex;               /* Allow the content to stretch */
    flex-direction: column;      /* Align items vertically */
    justify-content: space-between; /* Allow items to spread out */
    flex-grow: 1;                /* Allow the card to grow */
}

/* Color Specific Styles */
.total-research {
    background-color: #ffffff; /* Blue */
    color: black;
}

.proposed-research {
    background-color: #ffffff; /* Yellow */
    color: black;
}

.completed-research {
    background-color: #ffffff; /* Green */
    color: black;
}

.ongoing-research {
    background-color: #ffffff; /* Purple */
    color: black;
}

.published-research {
    background-color: #ffffff; /* Indigo */
    color: black;
}

/* Responsive Grid Layout */
.grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1rem;
}

@media (min-width: 768px) {
    .grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Add a smooth animation when loading the table */
@keyframes fadeIn {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

.table-container {
    animation: fadeIn 0.5s ease-in-out;
}

/* Title Styling */
.welcome {
    text-align: center;
    font-size: 2rem;
    color: #333;
    margin-bottom: 20px;
    font-weight: bold;
}

/* Table container styling */
.table-responsive {
    animation: fadeIn 0.5s ease-in-out;
}

/* Table Styling */
.table {
    border-collapse: collapse;
    width: 100%;
    border-radius: 10px;
    overflow: hidden;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-top: 30px;
}

/* Header Styling */
.table thead {
    background-color: #007bff;
    color: white;
    font-weight: bold;
}

.table th,
.table td {
    padding: 12px 15px;
    text-align: center;
    font-size: 0.8rem;
}

.table tbody tr {
    transition: background-color 0.3s ease;
}

.table tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.1);
}

/* Image Styling */
.circular-img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
}

/* Button Styling */
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-top: 20px;
}

.pagination a {
    padding: 8px 15px;
    background-color: #007bff;
    color: white;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.3s;
}

.pagination a:hover {
    background-color: #0056b3;
}

.pagination span {
    font-size: 1rem;
    color: #333;
}

/* Pagination Controls Animation */
.pagination a,
.pagination span {
    animation: fadeIn 0.5s ease-in-out;
}

.pagination a:nth-child(odd) {
    animation-delay: 0.3s;
}

.pagination a:nth-child(even) {
    animation-delay: 0.5s;
}


    </style>
</head>
<body>

<div class="header">
    <div class="brand">ESSU Research and Information Management System</div>
    <div class="d-flex">
        <span class="btn-profile" onclick="window.location.href='/facultyprofile'">Profile</span>
        <button class="btn-logout" onclick="window.location.href='/logout'">Logout</button>
    </div>
</div>

<div class="dashboard-container">
    <div class="sidebar">
        <a href="/rdsodashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="/rdsopapers"><i class="fas fa-file-alt"></i> Researches</a>
        <a href="/campusescolleges"><i class="fas fa-university"></i> Campuses & Colleges</a>
        <a href="/faculties"><i class="fas fa-user-graduate"></i> Faculties/Researchers</a>
        <a href="/requests"><i class="fas fa-envelope"></i> Verification Requests</a>
    </div>
    

    <div class="main-content">
        <h2 class="welcome">Faculty List</h2>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-success">
            <tr>
                <th>Profile</th>
                <th>Researcher</th>
                <th>Designation</th>
                <th>Campus</th>
                <th>College</th>
                <th>Department</th>
                <th>ID</th>
            </tr>
        </thead>
        <tbody>
            <% faculties.forEach(faculty => { %>
                <tr>
                    <td>
                        <% if (faculty.filename) { %>
                            <img src="/uploads/<%= faculty.filename %>" alt="Profile Picture" class="circular-img">
                        <% } else { %>
                            No Image
                        <% } %>
                    </td>
                    <td><%= faculty.name %></td>
                    <td><%= faculty.designation %></td>
                    <td><%= faculty.campus %></td>
                    <td><%= faculty.college %></td>
                    <td><%= faculty.department %></td>
                    <td><%= faculty.idnumber %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
    <!-- Pagination Controls -->
    <div class="pagination">
        <% if (page > 1) { %>
            <a href="?page=<%= page - 1 %>" class="btn btn-primary">Previous</a>
        <% } %>

        <span>Page <%= page %> of <%= totalPages %></span>

        <% if (page < totalPages) { %>
            <a href="?page=<%= page + 1 %>" class="btn btn-primary">Next</a>
        <% } %>
    </div>
</div>

    </div>
    
    

        

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
