<script>
    function sendToEmail(researchId, filename) {
    // Store values in modal inputs
    document.getElementById("researchIdInput").value = researchId;
    document.getElementById("filenameInput").value = filename;

    // Show modal
    let emailModal = new bootstrap.Modal(document.getElementById("emailModal"));
    emailModal.show();
}

// Handle form submission
document.getElementById("emailForm").addEventListener("submit", async function (event) {
    event.preventDefault();

    let researchId = document.getElementById("researchIdInput").value;
    let filename = document.getElementById("filenameInput").value;
    let email = document.getElementById("emailInput").value;

    let loadingSpinner = document.getElementById("loadingSpinner");
    let checkmarkAnimation = document.getElementById("checkmarkAnimation");

    // Show spinner
    loadingSpinner.classList.remove("d-none");
    checkmarkAnimation.classList.add("d-none");  // Ensure checkmark is hidden before submitting

    try {
        let response = await fetch("/send-email", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ researchId, filename, email }),
        });

        let result = await response.json();
        if (result.message === "Email sent successfully!") {
            // Show checkmark animation and hide spinner
            loadingSpinner.classList.add("d-none");
            checkmarkAnimation.classList.remove("d-none");
        } else {
            alert(result.message);
        }
    } catch (error) {
        alert("Failed to send email.");
    } finally {
        // Close modal after a brief delay to show the checkmark
        setTimeout(() => {
            let emailModal = bootstrap.Modal.getInstance(document.getElementById("emailModal"));
            emailModal.hide();

            // After closing the modal, hide the checkmark animation again
            checkmarkAnimation.classList.add("d-none");
        }, 2000); // Close modal after 2 seconds
    }
});



</script>


