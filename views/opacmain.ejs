<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">



<style>
    /* Modal Styling */
.modal {
    display: none; /* Hidden by default */
    position: fixed;
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Black background with transparency */
    justify-content: center;
    align-items: center;
    animation: fadeIn 0.5s ease-in-out;
}

.modal-content {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    max-width: 500px;
    width: 80%;
}

.modal h2 {
    margin-bottom: 20px;
    color: #333;
}

.modal .modal-animation {
    animation: bounce 1.5s infinite;
}

@keyframes bounce {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-20px);
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

</style>


<!-- Placeholder for Scanned Barcode -->
<div id="scannedBarcodeMessage" style="margin-top: 20px; color: green;"></div>

<script>
  // Elements
const searchInputTwo = document.getElementById('search-input');
const hiddenBarcodeInput = document.getElementById('hidden-barcode-input');
const scannedBarcodeMessage = document.getElementById('scannedBarcodeMessage');
const startBarcodeScanButton = document.getElementById('startBarcodeScan');
const searchFormTwo = document.querySelector('form[action="/search"]');
const barcodeModal = document.getElementById('barcodeModal');

// Variables to handle scanning
let isScanning = false;
let barcodeBuffer = "";

// Enable scanning mode
startBarcodeScanButton.addEventListener('click', (e) => {
    e.preventDefault();
    isScanning = true; // Activate scanning mode
    barcodeBuffer = ""; // Clear any previous input

    // Show the modal to guide the user
    barcodeModal.style.display = 'flex'; // Show the modal
    console.log("Modal should now be visible");

    scannedBarcodeMessage.textContent = "Ready to scan a barcode. Please scan now.";
});

// Listen for keyboard events (barcode scanner acts as a keyboard)
document.addEventListener('keydown', (event) => {
    if (!isScanning) return;

    console.log(`Key pressed: ${event.key}`);

    if (event.key === 'Enter') {
        // Barcode scanning is completed
        isScanning = false;

        // Populate the search input with the scanned barcode
        searchInputTwo.value = barcodeBuffer;

        // Update the hidden input for additional processing if needed
        hiddenBarcodeInput.value = barcodeBuffer;

        // Display the scanned barcode message
        scannedBarcodeMessage.textContent = `Scanned Barcode: ${barcodeBuffer}`;

        // Submit the form automatically
        searchFormTwo.submit();

        // Hide the modal once scanning is complete
        barcodeModal.style.display = 'none';

        // Clear the buffer for the next scan
        barcodeBuffer = "";
    } else {
        // Indicate the barcode is being read
        if (barcodeBuffer === "") {
            scannedBarcodeMessage.textContent = "Reading barcode...";
        }

        // Append the typed character to the barcode buffer
        barcodeBuffer += event.key;
    }
});

</script>



<!-- Modal for barcode scanning -->
<div class="modal fade" id="scanModal" tabindex="-1" aria-labelledby="scanModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="scanModalLabel">Scan Barcode</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="barcode-scanner" style="position: relative; width: 100%; height: 400px; background: #000; overflow: hidden;">
                    <p id="scan-result" style="position: absolute; bottom: 10px; left: 10px; color: #fff; z-index: 2;">Scanning...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include QuaggaJS -->
<script src="https://cdn.jsdelivr.net/npm/quagga@0.12.1/dist/quagga.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    const scanResult = document.getElementById('scan-result');
    const searchInput = document.getElementById('search-input'); // Reference to the search input field
    const searchForm = searchInput.closest('form'); // Reference to the form element

    // Initialize Quagga only once
    function initializeScanner() {
        console.log("Initializing Quagga...");
        // Initialize QuaggaJS for barcode scanning
        Quagga.init({
            inputStream: {
                name: "Live",
                type: "LiveStream",
                target: document.querySelector('#barcode-scanner'), // Where to display the video stream
                constraints: {
                    facingMode: "environment", // Use the back camera on mobile
                    width: 640, // Reduce width for faster processing
                    height: 480, // Reduce height for faster processing
                }
            },
            decoder: {
                readers: ["code_128_reader", "ean_reader"] // Limit to specific barcode formats you need
            },
            locate: true // Improve detection by locating the barcode in the video
        }, function(err) {
            if (err) {
                console.error('Error initializing Quagga:', err);
                scanResult.textContent = "Error starting scanner.";
                return;
            }
            console.log("Quagga initialized successfully.");
            Quagga.start(); // Start the barcode scanner
            scanResult.textContent = "Scanning...";
        });
    }

    // Function to start the scanner when the modal is shown
    function startScanner() {
        console.log("Starting scanner...");
        Quagga.onDetected(function(result) {
            const barcode = result.codeResult.code;
            scanResult.textContent = `Barcode detected: ${barcode}`;
            console.log("Barcode detected:", barcode);

            // Populate the search input field with the detected barcode
            searchInput.value = barcode;

            // Automatically submit the form
            searchForm.submit();

            // Close the modal immediately after detecting the barcode
            const modal = new bootstrap.Modal(document.getElementById('scanModal'));
            modal.hide(); // Close the modal
        });
    }

    // Start the scanner when the modal is shown
    document.getElementById('scanModal').addEventListener('shown.bs.modal', function () {
        console.log("Modal shown, starting scanner...");
        if (!Quagga.initialized) {
            initializeScanner(); // Initialize Quagga only once
        }
        startScanner(); // Start scanning
    });

    // Stop the scanner when the modal is hidden
    document.getElementById('scanModal').addEventListener('hidden.bs.modal', function () {
        console.log("Modal hidden, stopping scanner...");
        Quagga.stop(); // Stop the scanner when modal is closed
    });
</script>

