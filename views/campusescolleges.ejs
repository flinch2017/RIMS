<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>User Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            position: relative;
            background-color: #e8f5e9;
            display: flex;
            flex-direction: column;
            font-family: 'Arial', sans-serif;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                url('data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2220%22 height=%2220%22 viewBox=%220 0 20 20%22%3E%3Cpath fill=%22%23e0e0e0%22 d=%22M0 0h2v2H0zm2 2h2v2H2zm2 2h2v2H4zm2 2h2v2H6zm2 2h2v2H8zm2 2h2v2H10zm2 2h2v2H12zm2 2h2v2H14z%22/%3E%3C/svg%3E') repeat;
            background-size: 450px, 30px 30px;
            background-position: center, 0 0;
            opacity: 0.9;
            z-index: -1;
            animation: fadeAnimation 15s ease-in-out infinite, moveCheckered 10s linear infinite;
        }

        @keyframes fadeAnimation {
            0%, 100% { opacity: 0.9; }
            50% { opacity: 0.4; }
        }

        @keyframes moveCheckered {
            0% { background-position: center, 0 0; }
            100% { background-position: center, 0 100%; }
        }

        .header {
            background: linear-gradient(90deg, #008000, #66bb6a);
            color: white;
            padding: 0.75rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            font-size: 1rem;
        }

        .header .brand {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .header .btn-profile,
        .header .btn-logout {
            background-color: #ffffff;
            color: #2e7d32;
            border: none;
            padding: 0.4rem 0.8rem;
            border-radius: 4px;
            font-size: 0.9rem;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
            margin-right: 10px;
        }

        .header .btn-profile:hover,
        .header .btn-logout:hover {
            background-color: #f1f1f1;
            color: #2e7d32;
        }

        .dashboard-container {
            margin-top: 60px;
            display: flex;
            flex-wrap: wrap;
        }

        .sidebar {
            width: 220px;
            background-color: #66bb6a;
            padding-top: 15px;
            position: fixed;
            top: 60px;
            left: 0;
            height: calc(100% - 60px);
            overflow-y: auto;
            z-index: 900;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 0.8rem;
            text-decoration: none;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #388e3c;
        }

        .sidebar i {
            margin-right: 8px;
            font-size: 1rem;
        }

        .main-content {
            margin-left: 220px;
            padding: 1.5rem;
            flex-grow: 1;
            width: 100%;
        }

        .welcome {
            font-size: 1rem;
            color: #2e7d32;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .campus-card {
    height: 150px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
}

.campus-card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
}

.campus-card i {
    font-size: 2.5rem;
    color: #66bb6a;
    margin-bottom: 1rem;
}

.campus-card .campus-name {
    font-size: 1.125rem;
    font-weight: bold;
    color: #2e7d32;
}

.modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    overflow: auto;
}

.modal-content {
    background-color: white;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 400px;
    border-radius: 10px;
}

.modal-content label {
    display: block;
    margin: 10px 0 5px;
}

.modal-content input {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 5px;
    border: 1px solid #ccc;
}

.modal-content input[readonly] {
    background-color: #f0f0f0;
    cursor: not-allowed;
}

.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

.campus-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.8rem; /* Reduced gap between cards */
    margin-top: 2rem;
}

@media (min-width: 768px) {
    .campus-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

h1.my-4 {
    font-size: 1.25rem; /* Reduced font size for the title */
    font-weight: bold;
    color: #000000;
}



    </style>
</head>
<body>

<div class="header">
    <div class="brand">ESSU Research and Information Management System</div>
    <div class="d-flex">
        <span class="btn-profile" onclick="window.location.href='/facultyprofile'">Profile</span>
        <button class="btn-logout" onclick="window.location.href='/logout'">Logout</button>
    </div>
</div>

<div class="dashboard-container">
    <div class="sidebar">
        <a href="/rdsodashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="/rdsopapers"><i class="fas fa-file-alt"></i> Researches</a>
        <a href="/campusescolleges"><i class="fas fa-university"></i> Campuses & Colleges</a>
        <a href="/faculties"><i class="fas fa-user-graduate"></i> Faculties/Researchers</a>
        <a href="/requests"><i class="fas fa-envelope"></i> Verification Requests</a>
    </div>
    

    <div class="main-content">
        
        <h1 class="my-4">Campus & Colleges</h1>
        <p>Select campus to set annual target number of research</p>
        <div class="campus-grid">
            <div class="campus-card" data-campus="ESSU MAIN">
                <i class="fas fa-school"></i>
                <div class="campus-name">ESSU MAIN</div>
            </div>
            <div class="campus-card" data-campus="ESSU MAYDOLONG">
                <i class="fas fa-school"></i>
                <div class="campus-name">ESSU MAYDOLONG</div>
            </div>
            <div class="campus-card" data-campus="ESSU SALCEDO">
                <i class="fas fa-school"></i>
                <div class="campus-name">ESSU SALCEDO</div>
            </div>
            <div class="campus-card" data-campus="ESSU GUIUAN">
                <i class="fas fa-school"></i>
                <div class="campus-name">ESSU GUIUAN</div>
            </div>
            <div class="campus-card" data-campus="ESSU CAN-AVID">
                <i class="fas fa-school"></i>
                <div class="campus-name">ESSU CAN-AVID</div>
            </div>
            <div class="campus-card" data-campus="ESSU ARTECHE">
                <i class="fas fa-school"></i>
                <div class="campus-name">ESSU ARTECHE</div>
            </div>
        </div>
        
        <!-- Modal -->
<div id="campusModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <form action="/save-campus-data" method="POST">
            <label for="campus">Campus:</label>
            <input type="text" id="campus" name="campus" readonly />
        
            <label for="college">College:</label>
            <input type="text" id="college" name="college" />
        
            <label for="year">Select Year:</label>
            <input type="number" id="year" name="year" min="2023" max="2026" step="1" value="2023">
        
            <label for="targetResearch">Target Number of Research:</label>
            <input type="number" id="targetResearch" name="targetResearch" min="0" placeholder="Enter target number of research">
        
            <button type="submit" class="btn-submit">Save</button>
        </form>
        
    </div>
</div>


        <style>
           /* Modal Background */
.modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgba(0, 0, 0, 0.4); /* Black with opacity */
    padding-top: 60px; /* Space from top */
}

/* Modal Content */
.modal-content {
    background-color: #fefefe;
    margin: 5% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* Close Button */
.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

/* Form Styling */
form {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

label {
    font-weight: bold;
}

/* Input Fields Styling */
input[type="text"],
input[type="number"] {
    padding: 10px; /* Added padding for text and number fields */
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 8px;
    width: 100%;
    box-sizing: border-box;
}


/* Range Slider Styling */
input[type="range"] {
    padding: 0px; /* No padding for the range slider */
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 8px;
    width: 100%;
    box-sizing: border-box;
}

/* Percentage Value Styling */
#percentageValue {
    text-align: right;
    font-size: 14px;
    margin-top: 5px;
}

/* Submit Button Styling */
.btn-submit {
    background-color: #66bb6a; /* Green background */
    color: white; /* White text */
    border: none; /* Remove default border */
    padding: 10px 20px; /* Padding for the button */
    font-size: 16px; /* Font size */
    border-radius: 8px; /* Rounded corners */
    cursor: pointer; /* Pointer cursor on hover */
    transition: background-color 0.3s ease; /* Smooth background change on hover */
    width: 100%; /* Full width */
    box-sizing: border-box; /* Include padding and border in the element's total width */
}

.btn-submit:hover {
    background-color: #388e3c; /* Darker green on hover */
}

        </style>
        

        <script>
            // Get all campus cards and modal elements
const campusCards = document.querySelectorAll('.campus-card');
const modal = document.getElementById('campusModal');
const closeBtn = document.querySelector('.close');
const campusInput = document.getElementById('campus');
const collegeInput = document.getElementById('college');
const yearInput = document.getElementById('year');
const targetResearchInput = document.getElementById('targetResearch');

// Event listener for opening the modal when a campus card is clicked
campusCards.forEach(card => {
    card.addEventListener('click', function () {
        const campusName = card.getAttribute('data-campus');  // Get the campus name from the card
        
        // Set the campus name in the modal input and make it readonly
        campusInput.value = campusName;
        campusInput.setAttribute('readonly', true);  // Make it readonly
        
        // Clear and focus on the editable fields
        collegeInput.value = '';  // Reset College input
        
        // Reset the target research input to default
        targetResearchInput.value = '';  // Set to empty string or a default value if needed
        
        // Reset the year selection to default
        yearInput.value = "2023";  // Set default year (can change if needed)
        
        // Open the modal
        modal.style.display = 'block';
    });
});

// Event listener for closing the modal
closeBtn.addEventListener('click', function () {
    modal.style.display = 'none';
});

// Close the modal if the user clicks outside of the modal content
window.addEventListener('click', function (event) {
    if (event.target === modal) {
        modal.style.display = 'none';
    }
});

            </script>
            
        
        

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </div>
</div>

</body>
</html>
